<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <codingbo.viewstudy.myLayout.BricksLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="20dp"
        >

        <Button
            android:id="@+id/bt_thumb"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_margin="50dp"
            android:onClick="thumb"
            android:text="thumb"/>

        <Button
            android:id="@+id/bt_2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="view3d"
            android:text="view3d"
            />

        <Button
            android:id="@+id/bt_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:onClick="touch"
            android:text="touch"
            />

        <Button
            android:id="@+id/bt_4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="floatView"
            android:text="float"
            />

        <Button
            android:id="@+id/bt_5"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:onClick="floatView2"
            android:text="float2"
            />

        <Button
            android:id="@+id/bt_6"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="showMore"
            android:text="showMoreView"
            />

    </codingbo.viewstudy.myLayout.BricksLayout>


</LinearLayout>